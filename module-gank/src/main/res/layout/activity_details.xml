<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@android:color/black">

    <RelativeLayout
        android:id="@+id/rl_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/iv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/selector_item_background"
            android:clickable="true"
            android:padding="@dimen/dp_5"
            android:src="@drawable/ic_save" />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@id/iv_save"
            android:background="@drawable/selector_item_background"
            android:clickable="true"
            android:padding="@dimen/dp_5"
            android:src="@drawable/ic_edit" />

    </RelativeLayout>

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/iv_meizhi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rl_panel"
        android:transitionName="@string/tn_meizhi" />

</RelativeLayout>